@model EmployeeCodeEF.Models.Employee

<div class="card shadow-lg m-3" style="width: 18rem; border-radius: 10px; overflow: hidden; background-color: #f8f9fa;">
    <div class="card-header text-white" style="background-color: #007bff;">
        <h5 class="card-title text-center mb-0">@Model.Name</h5>
    </div>
    <div class="card-body">
        <p class="card-text">
            <strong>Position:</strong> @Model.Position <br />
            <strong>Salary:</strong> @Model.Salary <br />
        </p>
    </div>
</div>
